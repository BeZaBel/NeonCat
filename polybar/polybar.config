; Includes
include-file = modules.ini
include-file = colors.ini 

[bar/onebar]
monitor = DisplayPort-2
bottom = false
fixed-center = true
width = 100%
height = 35
offset-y = 0
offset-x = 0
background = ${color.bground}
foreground = ${color.fground}
line-size = 5
border-size = 0
border-color = ${color.gold}
padding-left = 5
padding-right = 5
module-margin-left = 0
module-margin-right = 0
font-0 = Dosis:size=13;3
font-1 = Iosevka Nerd Font:size=13;3
font-2 = FontAwesome 6 Free Solid:size=12;1
font-3 = siji:size=10;2
font-4 = FontAwesome 6 Free Solid:size=8;4
modules-left = title
modules-center = date
modules-right = workspaces sep2 filesystem pulseaudio xkeyboard sep2 memory cpu sep9
tray-position = center
tray-offset-x = 48%
tray-maxsize = 20
tray-background = ${color.bground}
cursor-click = pointer
cursor-scroll = ns-resize

