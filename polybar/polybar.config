;; Includes

include-file = modules.ini
include-file = aesthetics.ini
include-file = colors.ini

[bar/single]
bottom = false
fixed-center = true
width = 1920
height = 35
offset-y = 0
offset-x = 0
background = ${color.bground}
foreground = ${color.fground}
line-size = 5
border-size = 0
border-color = ${color.gold}
padding-left = 5
padding-right = 5
module-margin-left = 0
module-margin-right = 0
font-0 = Dosis:size=13;3
font-1 = FontAwesome:size=12;1
font-2 = "Iosevka Nerd Font:size=8;2"
modules-left = windowname
modules-center = clock
modules-right = system volume keyboard sep1 workspaces sep1 memory cpu sep9
tray-position = center
tray-offset-x = 46%
tray-maxsize = 20
tray-background = ${color.bground}
cursor-click = pointer
cursor-scroll = ns-resize

[settings]
screnchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

;vim:ft=dosini
