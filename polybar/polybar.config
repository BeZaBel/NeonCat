;; Includes

include-file = modules.ini
include-file = aesthetics.ini
include-file = colors.ini

[bar/single]
bottom = false
fixed-center = true
width = 1910
height = 45
offset-y = 5
offset-x = 5
background = ${color.bground}
foreground = ${color.fground}
line-size = 5
border-size = 0
border-color = ${color.gold}
padding-left = 5
padding-right = 5
module-margin-left = 0
module-margin-right = 0
font-0 = Dosis:size=15;3
font-1 = Symbols Nerd Font:size=15;1
font-2 = JetBrainsMono Nerd Font:size=26;6
font-3 = JetBrainsMono Nerd Font:size=11;3
modules-left = sep1 workspaces sep1 windowname 
modules-center = clock
modules-right = battery sep4 sep4
tray-position = center
tray-offset-x = 44%
tray-maxsize = 20
tray-background = ${color.bground}
cursor-click = pointer
cursor-scroll = ns-resize

[bar/blank]
fixed-center = true
width = 345
height = 33
offset-y = 11
offset-x = 1230
background = ${color.transparency}
foreground = ${color.transparency}
font-0 = Dosis:size=14;3
font-1 = Symbols Nerd Font:size=15;3
font-2 = JetBrainsMono Nerd Font:size=22;3.7
font-3 = JetBrainsMono Nerd Font:size=9;3
modules-center = system volume keyboard sepalt touchpad sepalt
cursor-click = pointer
cursor-scroll = ns-resize
override-redirect = true

[bar/spacer]
fixed-center = true
bottom = true
width = 260
height = 10
offset-y = 0
offset-x = 1200
background = ${color.transparency}
foreground = ${color.transparency}
font-0 = Dosis:size=11;3
font-1 = Font Awesome 6 Free Solid:size=10;3
font-2 = JetBrainsMono Nerd Font:size=17;3.7
font-3 = JetBrainsMono Nerd Font:size=9;3
modules-center = blankplate
cursor-click = pointer
cursor-scroll = ns-resize

[settings]
screnchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

;vim:ft=dosini
