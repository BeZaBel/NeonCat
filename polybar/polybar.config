;; Includes

include-file = modules.ini
include-file = aesthetics.ini
include-file = colors.ini

[bar/blank]
fixed-center = true
width = 270
height = 26
offset-y = 11
offset-x = 1200
background = ${color.transparency}
foreground = ${color.transparency}
font-0 = Dosis:size=11;3
font-1 = Symbols Nerd Font Mono:size=15;3
font-2 = JetBrainsMono Nerd Font:size=14.8;3.7
font-3 = JetBrainsMono Nerd Font:size=9;3
modules-center = system volume keyboard sepalt
cursor-click = pointer
cursor-scroll = ns-resize
override-redirect = true

[bar/single]
bottom = false
fixed-center = true
width = 1912
height = 40
offset-y = 4
offset-x = 4
background = ${color.bground}
foreground = ${color.fground}
line-size = 5
border-size = 0
border-color = ${color.lavender}
padding-left = 5
padding-right = 5
module-margin-left = 0
module-margin-right = 0
font-0 = Dosis:size=13;3
font-1 = Symbols Nerd Font Mono:size=11;3
font-2 = JetBrainsMono Nerd Font:size=24;5
font-3 = JetBrainsMono Nerd Font:size=11;3
modules-left = workspaces sep1 windowname
modules-center = clock
modules-right = sep1 memory cpu sep9 sep2
tray-position = center
tray-offset-x = 45%
tray-maxsize = 20
tray-background = ${color.bground}
cursor-click = pointer
cursor-scroll = ns-resize

[settings]
screnchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

;vim:ft=dosini
